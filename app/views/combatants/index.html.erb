<p style="color: green"><%= notice %></p>

<h1>Combatants</h1>
<div class="table-responsive" id="combatants">
  <table>
    <thead>
      <th><strong>Name:</strong></th>
      <th><strong>Initiative:</strong></th>
      <th><strong>Hp max:</strong></th>
      <th><strong>Hp</strong></th>
      <th><strong>Temp hp:</strong></th>
      <th><strong>Ac</strong></th>
      <th><strong>Dead</strong></th>
    </thead>
    <tbody>
      <% @combatants.each do |combatant| %>
      <%= render combatant %>
      <p>
      <%= link_to "Show this combatant", combatant %>
      </p>
      <% end %>
    </tbody>   
  </table>
</div>

<%= link_to "New combatant", new_combatant_path %>
